- content_for :javascripts do

  :javascript

    LeafletLib.initialize(
      $("#detail-map")[0],
      {
        markers: [
          [ #{@flower.latitude}, #{@flower.longitude} ]
        ]
      },
      [ #{@flower.latitude}, #{@flower.longitude} ],
      15
    );
    

.row-fluid
  .span8

    %h1
      = @flower.name

    %h3
      Photos tagged with
      = "##{@flower.tag}"

    .alert.alert-info
      Take a photo of this flower on Instagram and tag it with 
      %strong
        = "##{@flower.tag}"
      and it will show up here!


  .span4
    .well
      #detail-map

      %h4
        = @flower.address
      %p
        = @flower.created_at.to_s(:long)